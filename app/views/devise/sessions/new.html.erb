<div class="container1">

  <img id="pm" src="/pm2.png" alt="">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field is-horizontal is-narrow">
    <div class="field-label is-normal">
      <label class="label">E-mail </label>
    </div>
  </div>

  <div class="field is-horizontal is-narrow">
    <div class="field-body">
      <div class="field">
        <p class="control is-expanded">
          <%= f.email_field :email, class: 'input', autofocus: true, placeholder: "E-mail", autocomplete: "email" %>
        </p>
      </div>
    </div>
  </div>

  <div class="field is-horizontal is-narrow">
    <div class="field-label is-normal">
      <label class="label">Contrase√±a </label>
    </div>
  </div>

  <div class="field is-horizontal is-narrow">
    <div class="field-body">
      <div class="field">
        <p class="control is-expanded">
          <%= f.password_field :password, class: 'input', autocomplete: "current-password" %>
        </p>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>

      <div class="field">
        <div class="control">
          <label class="checkbox">
            <%= f.check_box :remember_me, class: 'checkbox' %>
            <%= f.label :Recordarme %>
          </label>
        </div>
      </div>

  <% end -%>

  <div class="field is-grouped">
    <div class="control">
      <%= f.submit "Ingresar", class: 'button is-success' %>
    </div>
  </div>

<% end %>

</div>